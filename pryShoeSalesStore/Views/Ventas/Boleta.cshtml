@model Capa_Entidad.VentaCompleta
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Boleta @Model.numVenta</title>
    <style>
        body{ font-family: Arial, Helvetica, sans-serif; font-size:12px; }
        table{ width:100%; border-collapse: collapse; }
        th,td{ border:1px solid #333; padding:4px; }
        th{ background:#eee; }
    </style>
</head>
<body>
    <h2>Boleta NÂ° @Model.numVenta</h2>
    <p><strong>Fecha:</strong> @Model.fecha.ToShortDateString()</p>
    <p><strong>Cliente:</strong> @Model.cliente.nomCli @Model.cliente.apeCli</p>
    <p><strong>DNI:</strong> @Model.cliente.dni</p>
    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Importe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.detalle)
            {
                <tr>
                    <td>@item.nomProd</td>
                    <td>@item.stock</td>
                    <td>@item.precio</td>
                    <td>@item.importe</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" style="text-align:right">Total:</th>
                <th>@Model.total</th>
            </tr>
        </tfoot>
    </table>
</body>
</html>
