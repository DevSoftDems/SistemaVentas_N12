@model Capa_Entidad.Cliente

@{
    ViewBag.Title = "Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; margin-bottom: 30px;">Editar Cliente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <style>
        label {
            font-weight: bold;
        }
    </style>


    <div style="width: 700px; margin: 0 auto;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Contenedor para los campos -->
        <div class="row" style="margin-bottom: 15px;">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.idCli)
                    @Html.EditorFor(model => model.idCli, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.idCli, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.nomCli)
                    @Html.EditorFor(model => model.nomCli, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nomCli, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.apeCli)
                    @Html.EditorFor(model => model.apeCli, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.apeCli, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row" style="margin-bottom: 15px;">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.dni)
                    @Html.EditorFor(model => model.dni, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dni, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.dirCli)
                    @Html.EditorFor(model => model.dirCli, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dirCli, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.fecReg)
                    <div class="input-group">
                        @Html.EditorFor(model => model.fecReg, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        <span class="input-group-addon">
                            <i class="fa fa-calendar" style="font-size: 16px;"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.fecReg, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Botones centrados -->
        <div style="text-align: center;">
            <input type="submit" value="Editar" class="btn btn-success" style="margin-right: 10px;" />
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-warning" })
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.mensaje as string))
{
    <div style="text-align: center; margin-top: 20px;">
        <strong style="color: green;">@ViewBag.mensaje</strong>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
